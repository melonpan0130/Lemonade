html
    head
        title Lemonade
        script.
    body
        include include/title.pug
        form(action="/" method="post")
            select(name="option" onchange="changed()")
                option(value="all") All
                option(value="product") Product
                option(value="seller") Seller
                option(value="title") Title
            if false
                select(name="item")
                    option(value="sample") sample
            else
                input(type="text" name="search" placeholder="Search")
            button(type="submit") Search
        ul  
            each item in board
                //- if data == null
                    p= there is nothing!
                li
                    a(href='/lemon/'+item[0]+'/'+item[1])
                        h3= item[2]
                    p= item[3]
                    P= item[4]
                    //- img= item[4]
                    //- if userId != null
                        form(action="/comment/"+item[0]+'/'+item[1] method="post")
                            input(type="text" name="comment")
                        a(href='/comment/'+item[0]+'/'+item[1])
                            button Comment
                    unless item[6]
                        a(href="/heart/"+item[0]+'/'+item[1])
                            img(src="/images/like1.png")
                    else
                        img(src="/images/like.png")
                    if userId == item[0]
                        a(href='/updateBoard/'+item[1])
                            button Edit
                        a(href='/deleteBoard/'+item[1])
                            button Delete